{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.{js,ts}"
  ],
  "rootDir": "./",
  "modulePaths": [
    "<rootDir>"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}